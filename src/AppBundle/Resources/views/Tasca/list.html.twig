{% extends "::base.html.twig" %}

{% block title %}AppBundle:Tasca:list{% endblock %}

{% block body %}
<h1>Llistat de tasques</h1>
    <table border="1">
    {% for tasca in totesTasques %}
        <tr>
            <td><b>{{tasca.id}}</b></td>
            <td><b>{{tasca.titol}}</b></td>
            <td>{{tasca.data|date('Y-m-d H:i:s')}}</td>
        </tr>
    {% else %}
        <tr>
            <td>No hi han resultats disponibles</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
